<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FirstDemo.Forms"
             x:Class="FirstDemo.Forms.Views.FirstView">

    <Grid >
        <StackLayout Margin="12,12,12,12">
            <Entry Text="{Binding FirstName, Mode=TwoWay}"></Entry>
            <Entry Text="{Binding LastName, Mode=TwoWay}"></Entry>
            <Label Text="{Binding FullName}"></Label>
        </StackLayout>
    </Grid>

</views:MvxContentPage>
